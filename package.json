{
  "name": "middleware-adapter",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/middleware-adapter"
  ],
  "devEngines": {
    "node": "12.x || 13.x || 14.x"
  },
  "scripts": {
    "dev": "node ./packages/middleware-adapter/src",
    "all": "yarn workspaces run",
    "clean": "node --experimental-modules ./scripts/rimraf/rimraf.js lib dist es coverage types",
    "build": " yarn all build --root-mode upward",
    "lint": "eslint --ignore-path .gitignore --ext .js,.ts,.tsx,.cjs .",
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(js|json|ts|tsx|cjs)\"",
    "format": "yarn prettier --write",
    "check-format": "yarn prettier --list-different",
    "check-types": "tsc",
    "jest": "jest --config ./jest.config.cjs",
    "test:watch": "yarn jest --watch",
    "test:coverage": "yarn jest --coverage",
    "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --watch",
    "validate": "npm-run-all --parallel lint check-format check-types build"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.1",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-typescript": "^7.10.4",
    "@types/jest": "^26.0.9",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "babel-jest": "^26.2.2",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "husky": "^4.2.5",
    "jest": "^26.2.2",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.1.4",
    "typescript": "^3.9.7"
  }
}
